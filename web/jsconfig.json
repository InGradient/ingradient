{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/app/*": ["app/*"],
      "@/styles/*": ["styles/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/utils/*": ["utils/*"],
      "@/services/*": ["services/*"],
      "@/contexts/*": ["contexts/*"],
      "@/assets/*": ["assets/*"],
      "@/state/*": ["state/*"],
      "@/constants/*": ["constants/*"],
      "@/lib/*": ["lib/*"],
      "@/config": ["config.js"],
      "@/config/*": ["config/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}